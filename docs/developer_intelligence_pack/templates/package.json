{
  "name": "nexus-framework",
  "version": "2.3.0",
  "description": "A world-class, modular, scalable multi-agent engineering mega-system",
  "author": "Rick1330 <elishum8@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rick1330/Nexus-Framework.git"
  },
  "scripts": {
    "start": "python -m nexus.api.server",
    "dev": "uvicorn nexus.api.server:app --reload",
    "test": "pytest",
    "test:cov": "pytest --cov=nexus",
    "lint": "ruff check nexus tests",
    "format": "black nexus tests && isort nexus tests",
    "typecheck": "mypy nexus",
    "docs:build": "cd docs && mkdocs build",
    "docs:serve": "cd docs && mkdocs serve"
  },
  "dependencies": {
    "python": "^3.10.0"
  },
  "devDependencies": {
    "pytest": "^7.3.1",
    "black": "^23.3.0",
    "isort": "^5.12.0",
    "mypy": "^1.3.0",
    "ruff": "^0.0.270",
    "pytest-cov": "^4.1.0",
    "pytest-asyncio": "^0.21.0",
    "mkdocs": "^1.4.3",
    "mkdocs-material": "^9.1.15"
  }
}
